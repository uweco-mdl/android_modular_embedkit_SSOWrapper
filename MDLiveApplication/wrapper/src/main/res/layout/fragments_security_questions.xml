<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:background="@color/app_background"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="18dp"
        android:text="@string/mdl_change_security_questions"
        android:tag="@string/mdltag_change_security_questions"
        android:textColor="@color/darkblack"
        android:visibility="gone"
        android:textSize="17sp" />

    <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        style="@style/myChangeProfileInfoLayoutStyle"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="4dp">

        <RelativeLayout
            android:id="@+id/changeQuestion1Layout"
            style="@style/common_style_W_Match_H_Wrap">

            <TextView
                android:id="@+id/changeQuestion1View"
                style="@style/myChangeProfileInfoTextStyle"
                android:text="@string/mdl_security_question_1"
                android:tag="@string/mdltag_security_question_1" />

            <TextView
                android:id="@+id/changeQuestion1"
                style="@style/myChangeProfileInfoValueStyle"
                android:layout_below="@id/changeQuestion1View"
                android:background="@color/white"
                android:drawablePadding="8dp"
                android:drawableRight="@drawable/dropdown_icon" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        style="@style/myChangeProfileInfoLayoutStyle"
        app:cardBackgroundColor="@color/white"
        android:id="@+id/answer1Layout"
        app:cardCornerRadius="4dp">

        <RelativeLayout style="@style/common_style_W_Match_H_Wrap"
            >

            <TextView
                android:id="@+id/answer1View"
                style="@style/myChangeProfileInfoTextStyle"
                android:text="@string/mdl_answer_question_1"
                android:tag="@string/mdltag_answer_question_1"/>

            <EditText
                android:id="@+id/answer1"
                style="@style/myChangeProfileInfoValueStyle"
                android:layout_below="@id/answer1View"
                android:background="@color/white"
                android:singleLine="true"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789 "
                android:inputType="textNoSuggestions"
                android:imeOptions="actionNext"
                android:cursorVisible="true" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        style="@style/myChangeProfileInfoLayoutStyle"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="4dp">

        <RelativeLayout
            android:id="@+id/changeQuestion2Layout"
            style="@style/common_style_W_Match_H_Wrap">

            <TextView
                android:id="@+id/changeQuestion2View"
                style="@style/myChangeProfileInfoTextStyle"
                android:text="@string/mdl_security_question_2"
                android:tag="@string/mdltag_security_question_2" />

            <TextView
                android:id="@+id/changeQuestion2"
                style="@style/myChangeProfileInfoValueStyle"
                android:layout_below="@id/changeQuestion2View"
                android:background="@color/white"
                android:drawablePadding="8dp"
                android:drawableRight="@drawable/dropdown_icon" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        style="@style/myChangeProfileInfoLayoutStyle"
        android:id="@+id/answer2Layout"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="4dp">

        <RelativeLayout style="@style/common_style_W_Match_H_Wrap">

            <TextView
                android:id="@+id/answer2View"
                style="@style/myChangeProfileInfoTextStyle"
                android:text="@string/mdl_answer_question_2"
                android:tag="@string/mdltag_answer_question_2" />

            <EditText
                android:id="@+id/answer2"
                style="@style/myChangeProfileInfoValueStyle"
                android:layout_below="@id/answer2View"
                android:background="@color/white"
                android:singleLine="true"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789 "
                android:inputType="textNoSuggestions"
                android:imeOptions="actionDone"
                android:cursorVisible="true" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>
