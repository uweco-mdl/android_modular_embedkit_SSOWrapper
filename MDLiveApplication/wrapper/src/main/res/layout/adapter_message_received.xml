<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dimen_4_dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/adapter_message_received_read_image_view"
                android:layout_width="@dimen/dimen_8_dp"
                android:layout_height="@dimen/dimen_8_dp"
                android:layout_marginLeft="@dimen/dimen_8_dp"
                android:layout_marginTop="@dimen/dimen_8_dp"
                android:scaleType="centerCrop"
                android:src="@drawable/red_circle" />

            <com.mdlive.unifiedmiddleware.commonclasses.customUi.CircularNetworkImageView
                android:id="@+id/adapter_message_received_image_view"
                style="@style/Adapter_Left_Element"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="@dimen/dimen_16_dp"
                android:contentDescription="@string/mdl_app_name"
                android:tag="@string/mdltag_app_name"
                android:scaleType="centerCrop"
                android:src="@drawable/circle_logo" />
        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_8_dp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/adapter_message_received_top_text_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/dimen_8_dp"
                    android:layout_weight="100"
                    android:singleLine="true"
                    android:text="@string/mdl_app_name"
                    android:tag="@string/mdltag_app_name"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    android:fontFamily="sans-serif"/>

                <TextView
                    android:id="@+id/adapter_message_received_date_text_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_4_dp"
                    android:layout_weight="50"
                    android:singleLine="true"
                    android:gravity="right"
                    android:text="@string/mdl_app_name"
                    android:tag="@string/mdltag_app_name"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif"/>
            </LinearLayout>

            <TextView
                android:id="@+id/adapter_message_received_bottom_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_4_dp"
                android:layout_marginTop="@dimen/dimen_4_dp"
                android:singleLine="true"
                android:text="@string/mdl_no"
                android:tag="@string/mdltag_no"
                android:textSize="14sp"
                android:fontFamily="sans-serif"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
