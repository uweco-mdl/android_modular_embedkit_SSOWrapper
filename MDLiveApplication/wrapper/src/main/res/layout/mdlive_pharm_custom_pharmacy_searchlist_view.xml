<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/getstarted_background_color"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="6dp"
    android:paddingBottom="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/searchpvr_white_rounded_corner"
        >

        <LinearLayout
            android:id="@+id/relative_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@+id/milesText"
            android:layout_toStartOf="@+id/milesText"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_view_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/mdl_testing"
                android:tag="@string/mdltag_testing"
                android:textColor="@color/darkgrey_background"
                android:textSize="17sp" />

            <LinearLayout
                android:id="@+id/preferStoretxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingRight="5dp">

                <ImageView
                    android:id="@+id/favourite"
                    android:layout_width="14dp"
                    android:layout_height="13dp"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/star_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/favourite"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/mdl_preferred"
                    android:tag="@string/mdltag_preferred"
                    android:textColor="@color/blue_text_color"
                    android:textSize="12sp" />
            </LinearLayout>


        </LinearLayout>


        <TextView
            android:id="@+id/milesText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="11dp"
            android:textColor="@color/darkgrey_background"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/relative_layout"
            android:layout_alignStart="@+id/relative_layout"
            android:layout_below="@id/relative_layout"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="4dp"
            android:layout_toLeftOf="@+id/twentyfourHrstxt"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pharmacyAddresline1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#818181"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/pharmacyAddressline2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#818181"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/twentyfourHrstxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/linearLayout2"
            android:layout_alignEnd="@+id/milesText"
            android:layout_alignRight="@+id/milesText"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/textView20"
                android:layout_toStartOf="@+id/textView20"
                android:paddingLeft="5dp"
                android:src="@drawable/clock_icon_blue" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="@color/blue_text_color"
                android:textSize="12sp" />

        </LinearLayout>


    </RelativeLayout>
</LinearLayout>