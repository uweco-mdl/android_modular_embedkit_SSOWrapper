<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="40dp"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
    android:layout_marginTop="110dp"
    android:background="@drawable/round_rect_white">






<LinearLayout
    style="@style/common_style_W_Match_H_Wrap_O_Vertical"
    android:background="@drawable/round_rect_white"
    android:padding="0.5dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/header_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/green_rounded_bg"
        android:paddingBottom="8dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="8dp"
        android:tag="@string/mdltag_health_tip_one"
        android:text="@string/mdl_health_tip_one"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10_dp"
        android:layout_marginRight="@dimen/dimen_10_dp"
        android:layout_marginTop="@dimen/dimen_10_dp"
        android:tag="@string/mdltag_health_tip_one_title"
        android:text="@string/mdl_health_tip_one_title"
        android:textColor="@color/darkgreyTextColor"
        android:textSize="17sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/body_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_10_dp"
            android:layout_marginLeft="@dimen/dimen_10_dp"
            android:layout_marginRight="@dimen/dimen_10_dp"
            android:layout_marginTop="14dp"
            android:fadeScrollbars="true"
            android:fadingEdge="vertical"
            android:fillViewport="true"
            android:overScrollMode="always"
            android:scrollbarStyle="insideOverlay"
            android:scrollbars="vertical"
            android:tag="@string/mdltag_health_tip_one_content"
            android:text="@string/mdl_health_tip_one_content"
            android:textColor="@color/darkgreyTextColor"
            android:textSize="17sp" />
    </LinearLayout>
</LinearLayout>
</LinearLayout>

