<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dimen_4_dp"
    android:padding="@dimen/dimen_8_dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dimen_8_dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/dimen_8_dp">

            <TextView
                android:id="@+id/helpsupportquestionId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mdl_question_hint"
                android:tag="@string/mdltag_question_hint"
                android:textSize="17dp"
                android:textColor="@color/unread_text_color"
                android:fontFamily="sans-serif"/>

            <TextView
                android:id="@+id/helpsupportquestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:layout_marginLeft="@dimen/dimen_4_dp"
                android:textColor="@color/unread_text_color"
                android:fontFamily="sans-serif"/>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/answerLinearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/helpsupportanswerId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="    "
                android:textSize="17dp"
                android:textColor="@color/unread_text_color"
                android:fontFamily="sans-serif-light"/>

            <TextView
                android:id="@+id/helpsupportanswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:textColor="@color/unread_text_color"
                android:fontFamily="sans-serif-light"
                android:layout_marginLeft="@dimen/dimen_4_dp"/>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
