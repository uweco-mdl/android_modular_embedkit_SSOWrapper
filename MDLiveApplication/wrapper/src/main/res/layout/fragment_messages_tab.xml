<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/mdl_app_name"
        android:tag="@string/mdltag_app_name"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/fragment_messages_tab_inbox_button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="@string/mdl_app_name"
            android:tag="@string/mdltag_app_name"/>

        <Button
            android:id="@+id/fragment_messages_tab_sent_button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="@string/mdl_app_name"
            android:tag="@string/mdltag_app_name"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_messages_tab_contatiner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>