<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/app_background" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/round_rect_white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="9.67dp"
        android:layout_marginLeft="9.67dp"
        android:layout_marginBottom="79.67dp"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="13.33dp"
            android:paddingLeft="9.67dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="@string/mdltag_my_pharmacy_addressline_one"
                android:text="@string/mdl_my_pharmacy_addressline_one"
                android:textSize="16.80sp"
                android:textColor="@color/medical_history_sub_text"
                android:id="@+id/txt_my_pharmacy_addressline_one" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mdl_my_pharmacy_addressline_two"
                android:tag="@string/mdltag_my_pharmacy_addressline_two"
                android:textColor="@color/medical_history_sub_text"
                android:textSize="14.40sp"
                android:id="@+id/txt_my_pharmacy_addressline_two" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mdl_my_pharmacy_addressline_three"
                android:tag="@string/mdltag_my_pharmacy_addressline_three"
                android:textColor="@color/medical_history_sub_text"
                android:textSize="14.40sp"
                android:id="@+id/txt_my_pharmacy_addressline_three" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mdl_my_pharmacy_addressline_four"
                android:tag="@string/mdltag_my_pharmacy_addressline_four"
                android:textSize="14.40sp"
                android:textColor="@color/radio_button_color_highlighted"
                android:id="@+id/txt_my_pharmacy_addressline_four" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/SavContinueBtn"
                android:text="@string/mdl_my_pharmacy_opening_time"
                android:tag="@string/mdltag_my_pharmacy_opening_time"
                android:textColor="@color/medical_history_sub_text"
                android:paddingTop="12.67dp"
                android:textSize="13.44sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="9.67dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="18dp"
            android:background="@color/grey_txt"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/mapView"
                style="@style/common_style_W_Match_M_Match"
                class="com.google.android.gms.maps.SupportMapFragment" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mdl_change_pharmacy"
            android:tag="@string/mdltag_change_pharmacy"
            android:textSize="16.80sp"
            android:textColor="@color/summary_contact"
            android:id="@+id/changePharmacyButton"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20.33dp"/>


    </LinearLayout>

</LinearLayout>