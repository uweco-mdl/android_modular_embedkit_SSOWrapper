<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:orientation="vertical">

    <ScrollView
        style="@style/common_style_W_Match_M_Wrap"
        android:layout_marginBottom="20dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:text="@string/mdl_pcp_title_text"
                android:tag="@string/mdltag_pcp_title_text"
                android:textColor="@color/darkblack"
                android:textSize="17sp" />

            <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                style="@style/myChangeProfileInfoLayoutStyle"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="4dp">

                <RelativeLayout style="@style/common_style_W_Match_H_Wrap">

                    <TextView
                        android:id="@+id/firstNameView"
                        style="@style/myChangeProfileInfoTextStyle"
                        android:tag="@string/mdltag_first_name_caps"
                        android:text="@string/mdl_first_name_caps_mandatory" />

                    <EditText
                        android:id="@+id/firstName"
                        style="@style/myChangeProfileInfoValueStyle"
                        android:singleLine="true"
                        android:imeOptions="actionNext"
                        android:layout_below="@id/firstNameView"
                        android:background="@color/white"
                        android:cursorVisible="true"
                         />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                style="@style/myChangeProfileInfoLayoutStyle"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="4dp">

                <RelativeLayout style="@style/common_style_W_Match_H_Wrap">

                    <TextView
                        android:id="@+id/middleNameView"
                        style="@style/myChangeProfileInfoTextStyle"
                        android:tag="@string/mdltag_middle_name_caps"
                        android:text="@string/mdl_middle_name_caps" />

                    <EditText
                        android:id="@+id/middleName"
                        style="@style/myChangeProfileInfoValueStyle"
                        android:singleLine="true"
                        android:imeOptions="actionNext"
                        android:layout_below="@id/middleNameView"
                        android:background="@color/white"
                        android:cursorVisible="true" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                style="@style/myChangeProfileInfoLayoutStyle"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="4dp">

                <RelativeLayout style="@style/common_style_W_Match_H_Wrap">

                    <TextView
                        android:id="@+id/lastNameView"
                        style="@style/myChangeProfileInfoTextStyle"
                        android:text="@string/mdl_last_name_caps_mandatory"
                        android:tag="@string/mdltag_last_name_caps"/>

                    <EditText
                        android:id="@+id/lastName"
                        style="@style/myChangeProfileInfoValueStyle"
                        android:singleLine="true"
                        android:imeOptions="actionNext"
                        android:layout_below="@id/lastNameView"
                        android:background="@color/white"
                        android:cursorVisible="true" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                style="@style/myChangeProfileInfoLayoutStyle"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="4dp">

                <RelativeLayout style="@style/common_style_W_Match_H_Wrap">

                    <TextView
                        android:id="@+id/practiceNameView"
                        style="@style/myChangeProfileInfoTextStyle"
                        android:text="@string/mdl_practice_name_caps"
                        android:tag="@string/mdltag_practice_name_caps"/>

                    <EditText
                        android:id="@+id/practiceName"
                        style="@style/myChangeProfileInfoValueStyle"
                        android:singleLine="true"
                        android:imeOptions="actionNext"
                        android:layout_below="@id/practiceNameView"
                        android:background="@color/white"
                        android:cursorVisible="true" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                style="@style/myChangeProfileInfoLayoutStyle"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="4dp">

                <RelativeLayout style="@style/common_style_W_Match_H_Wrap">

                    <TextView
                        android:id="@+id/emailView"
                        style="@style/myChangeProfileInfoTextStyle"
                        android:text="@string/mdl_email_address_caps"
                        android:tag="@string/mdltag_email_address_caps"/>

                    <EditText
                        android:id="@+id/email"
                        style="@style/myChangeProfileInfoValueStyle"
                        android:singleLine="true"
                        android:imeOptions="actionNext"
                        android:layout_below="@id/emailView"
                        android:background="@color/white"
                        android:cursorVisible="true"
                        android:inputType="textEmailAddress"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                style="@style/myChangeProfileInfoLayoutStyle"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="4dp">

                <RelativeLayout style="@style/common_style_W_Match_H_Wrap">

                    <TextView
                        android:id="@+id/streetAddressView"
                        style="@style/myChangeProfileInfoTextStyle"
                        android:text="@string/mdl_address_line1_caps"
                        android:tag="@string/mdltag_address_line1_caps"/>

                    <EditText
                        android:id="@+id/streetAddress"
                        style="@style/myChangeProfileInfoValueStyle"
                        android:singleLine="true"
                        android:imeOptions="actionNext"
                        android:layout_below="@id/streetAddressView"
                        android:background="@color/white"
                        android:cursorVisible="true" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                style="@style/myChangeProfileInfoLayoutStyle"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="4dp">

                <RelativeLayout
                    android:id="@+id/stateLayout"
                    android:clickable="true"
                    style="@style/common_style_W_Match_H_Wrap">

                    <TextView
                        android:id="@+id/stateView"
                        style="@style/myChangeProfileInfoTextStyle"
                        android:text="@string/mdl_state_caps_mandatory"
                        android:tag="@string/mdltag_state_caps_mandatory"/>

                    <TextView
                        android:id="@+id/state"
                        style="@style/myChangeProfileInfoValueStyle"
                        android:layout_below="@id/stateView"
                        android:background="@color/white"
                        android:cursorVisible="true"
                        android:drawablePadding="5dp"
                        android:drawableRight="@drawable/dropdown_icon" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                style="@style/myChangeProfileInfoLayoutStyle"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="4dp">

                <RelativeLayout
                    android:id="@+id/zipLayout"
                    style="@style/common_style_W_Wrap_H_Wrap">

                    <TextView
                        android:id="@+id/zipView"
                        style="@style/myChangeProfileInfoTextStyle"
                        android:text="@string/mdl_zip_caps"
                        android:tag="@string/mdltag_zip_caps"/>

                    <EditText
                        android:id="@+id/zip"
                        style="@style/myChangeProfileInfoValueStyle"
                        android:singleLine="true"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="10"
                        android:layout_below="@id/zipView"
                        android:background="@color/white"
                        android:cursorVisible="true" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                style="@style/myChangeProfileInfoLayoutStyle"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="4dp">

                <RelativeLayout
                    android:id="@+id/countryLayout"
                    android:clickable="true"
                    style="@style/common_style_W_Match_H_Wrap">

                    <TextView
                        android:id="@+id/countryView"
                        style="@style/myChangeProfileInfoTextStyle"
                        android:text="@string/mdl_country_caps"
                        android:tag="@string/mdltag_country_caps"/>

                    <TextView
                        android:id="@+id/country"
                        style="@style/myChangeProfileInfoValueStyle"
                        android:layout_below="@id/countryView"
                        android:background="@color/white"
                        android:cursorVisible="true"
                        android:drawablePadding="5dp"
                        android:drawableRight="@drawable/dropdown_icon" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                style="@style/myChangeProfileInfoLayoutStyle"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="4dp">

                <RelativeLayout
                    android:id="@+id/phoneNumberLayout"
                    style="@style/common_style_W_Wrap_H_Wrap">

                    <TextView
                        android:id="@+id/phoneNumberView"
                        style="@style/myChangeProfileInfoTextStyle"
                        android:text="@string/mdl_phone_caps_mandatory"
                        android:tag="@string/mdltag_phone_caps_mandatory"/>

                    <EditText
                        android:id="@+id/phoneNumber"
                        style="@style/myChangeProfileInfoValueStyle"
                        android:singleLine="true"
                        android:imeOptions="actionDone"
                        android:layout_below="@id/phoneNumberView"
                        android:background="@color/white"
                        android:cursorVisible="true"
                        android:maxLength="14"
                        android:inputType="phone"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>