<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_8_dp">
        <TextView
            android:id="@+id/mdlVersionNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:textColor="@color/unread_text_color"
            android:fontFamily="sans-serif"/>

    </LinearLayout>
    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dimen_4_dp"
        app:cardBackgroundColor="#ff257cfc">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height_48_dp"
            android:clickable="true"
            android:onClick="callAction"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen_64_dp">

            <ImageView
                android:layout_width="@dimen/dimen_32_dp"
                android:layout_height="@dimen/dimen_32_dp"
                android:src="@drawable/icon_phone_white"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_16_dp"
                android:tag="@string/mdltag_call_customer_service"
                android:text="@string/mdl_call_customer_service"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dimen_4_dp"
        android:layout_marginTop="@dimen/dimen_16_dp"
        android:layout_marginBottom="@dimen/dimen_16_dp"
        app:cardBackgroundColor="#ff257cfc">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height_48_dp"
            android:clickable="true"
            android:onClick="askQuestion"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen_64_dp"
            android:paddingRight="@dimen/dimen_64_dp">

            <ImageView
                android:layout_width="@dimen/dimen_32_dp"
                android:layout_height="@dimen/dimen_32_dp"
                android:src="@drawable/icon_email_white"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_16_dp"
                android:tag="@string/mdltag_ask_a_question"
                android:text="@string/mdl_ask_a_question"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>