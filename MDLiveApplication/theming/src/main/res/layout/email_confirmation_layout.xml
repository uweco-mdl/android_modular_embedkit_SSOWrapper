<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dimen_16_dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:tag="@string/mdltag_email_confirmation_first_text"
        android:text="@string/mdl_email_confirmation_first_text"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:tag="@string/mdltag_email_confirmation_second_text"
        android:text="@string/mdl_email_confirmation_second_text"
        android:layout_marginTop="@dimen/dimen_16_dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:tag="@string/mdltag_email_confirmation_third_text"
        android:text="@string/mdl_email_confirmation_third_text"
        android:layout_marginTop="@dimen/dimen_16_dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:tag="@string/mdltag_email_confirmation_fourth_text"
        android:text="@string/mdl_email_confirmation_fourth_text"
        android:layout_marginTop="@dimen/dimen_8_dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:tag="@string/mdltag_email_confirmation_fifth_text"
        android:text="@string/mdl_email_confirmation_fifth_text"
        android:layout_marginTop="@dimen/dimen_8_dp"/>
</LinearLayout>