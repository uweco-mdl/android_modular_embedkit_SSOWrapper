<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        style="@style/wagHeaderLinearLayoutStyle"
        android:background="@color/red_theme_primary"
        android:elevation="@dimen/dimen_0_dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/toolbar_back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:background="@drawable/back_arrow_hdpi" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:layout_marginLeft="72dp"
            android:layout_centerVertical="true"
            android:text="@string/mdl_first_available"
            android:tag="@string/mdltag_first_available"
            android:textAllCaps="true"
            android:textStyle="bold"/>

    </RelativeLayout>

    <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        style="@style/common_style_W_Match_H_Wrap_O_Vertical"
        app:cardBackgroundColor="@color/white">
        <LinearLayout
            style="@style/common_style_W_Match_H_Match_O_Vertical"
            android:paddingTop="30dp"
            android:paddingBottom="@dimen/dimen_28_dp">

            <ImageView
                android:layout_width="@dimen/provider_display_image_size"
                android:layout_height="@dimen/provider_display_image_size"
                android:src="@drawable/dash_board_doctor_icon"
                android:stateListAnimator="@null"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mdl_first_available_doctor"
                android:tag="@string/mdltag_first_available_doctor"
                android:textSize="22sp"
                android:textColor="@color/darkgreyTextColor"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mdl_appointment_type_text"
        android:tag="@string/mdltag_appointment_type_text"
        android:layout_marginTop="21dp"
        android:textColor="@color/darkblack"
        android:fontFamily="sans-serif-light"
        android:gravity="center_horizontal"/>

    <LinearLayout
        style="@style/common_style_W_Match_H_Wrap_O_Horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="@dimen/dimen_10_dp"

        android:layout_marginRight="@dimen/dimen_10_dp">

        <Button
            style="@style/FirstAvailableButtonStyle"
            android:layout_marginRight="@dimen/dimen_4_dp"
            android:layout_weight="1"
            android:elevation="5dp"
            android:drawableLeft="@drawable/video_icon_white"
            android:text="@string/mdl_by_video"
            android:tag="@string/mdltag_by_video"/>

        <Button
            style="@style/FirstAvailableButtonStyle"
            android:layout_marginLeft="@dimen/dimen_4_dp"
            android:layout_weight="1"
            android:elevation="5dp"
            android:drawableLeft="@drawable/phone_icon_white"
            android:text="@string/mdl_by_phone"
            android:tag="@string/mdltag_by_phone"/>

    </LinearLayout>

</LinearLayout>