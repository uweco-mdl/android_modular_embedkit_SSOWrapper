<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ContainerStyle">

    <RelativeLayout
        style="@style/wagHeaderLinearLayoutStyle"
        android:elevation="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/home_icon"
            android:id="@+id/homeImg"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toEndOf="@+id/backImg"
            />
        <TextView
            android:id="@+id/headerTxt"
            style = "@style/HeaderTextViewStyle"
            android:layout_centerInParent="true"
            android:text="@string/mdl_waiting_room_title"
            android:tag="@string/mdltag_waiting_room_title"
            />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:src="@drawable/doctor_icon_xxhdpi"

            />


        <com.mdlive.unifiedmiddleware.commonclasses.customUi.CustomTv
            android:id="@+id/txt_waitingtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text="@string/mdl_waiting_provider_text"
            android:tag="@string/mdltag_waiting_provider_text"
            android:textSize="18sp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/numberOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:text="@string/mdl_number_one"
            android:padding="10dp"
            android:textColor="@color/green"
            android:textSize="125sp" />

        <TextView
            android:id="@+id/numberTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:text="@string/mdl_number_two"
            android:textColor="@color/grey_txt"
            android:padding="10dp"
            android:textSize="125sp" />

        <TextView
            android:id="@+id/numberThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:text="@string/mdl_number_three"
            android:textColor="@color/grey_txt"
            android:padding="10dp"
            android:textSize="125sp" />

    </LinearLayout>



    <com.mdlive.unifiedmiddleware.commonclasses.customUi.CustomTv
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:paddingBottom="50dp"
        android:text="@string/mdl_waiting_warn_text"
        android:tag="@string/mdltag_waiting_warn_text"
        android:textSize="18sp"
        android:textStyle="bold"
         />


</LinearLayout>