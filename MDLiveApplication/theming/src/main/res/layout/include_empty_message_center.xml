<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/message_center_empty_image_view"
        android:layout_width="@dimen/dimen_128_dp"
        android:layout_height="@dimen/dimen_128_dp"
        android:scaleType="centerInside"
        android:layout_marginTop="@dimen/dimen_32_dp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/message_center_empty_header_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginLeft="@dimen/dimen_32_dp"
        android:layout_marginRight="@dimen/dimen_32_dp"
        android:textColor="@color/EditText_HintColor"
        android:layout_marginTop="@dimen/dimen_16_dp"
        android:textSize="21sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/message_center_empty_details_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="@dimen/dimen_16_dp"
        android:layout_marginLeft="@dimen/dimen_32_dp"
        android:layout_marginRight="@dimen/dimen_32_dp"
        android:textColor="@color/EditText_HintColor"
        android:textSize="20sp"/>
</LinearLayout>