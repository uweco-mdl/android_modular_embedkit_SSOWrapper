    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="1"
        android:orientation="vertical"
        >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ToggleButton
                    android:id="@+id/passCode1"
                    android:layout_width="@dimen/dimen_20_dp"
                    android:layout_height="@dimen/dimen_20_dp"
                    android:layout_marginLeft="@dimen/dimen_10_dp"
                    android:layout_marginRight="@dimen/dimen_10_dp"
                    android:layout_marginTop="@dimen/dimen_8_dp"
                    android:layout_marginBottom="@dimen/dimen_8_dp"
                    android:background="@drawable/edit_text_selector"
                    android:contentDescription="@string/mdl_ada_pin_one"
                    android:enabled="false"
                    android:gravity="center"
                    android:textOff="@null"
                    android:textOn="@null" />

                <ToggleButton
                    android:id="@+id/passCode2"
                    android:layout_width="@dimen/dimen_20_dp"
                    android:layout_height="@dimen/dimen_20_dp"
                    android:layout_marginLeft="@dimen/dimen_10_dp"
                    android:layout_marginRight="@dimen/dimen_10_dp"
                    android:layout_marginTop="@dimen/dimen_8_dp"
                    android:layout_marginBottom="@dimen/dimen_8_dp"
                    android:background="@drawable/edit_text_selector"
                    android:contentDescription="@string/mdl_ada_pin_two"
                    android:enabled="false"
                    android:gravity="center"
                    android:textOff="@null"
                    android:textOn="@null" />

                <ToggleButton
                    android:id="@+id/passCode3"
                    android:layout_width="@dimen/dimen_20_dp"
                    android:layout_height="@dimen/dimen_20_dp"
                    android:layout_marginLeft="@dimen/dimen_10_dp"
                    android:layout_marginRight="@dimen/dimen_10_dp"
                    android:layout_marginTop="@dimen/dimen_8_dp"
                    android:layout_marginBottom="@dimen/dimen_8_dp"
                    android:background="@drawable/edit_text_selector"
                    android:contentDescription="@string/mdl_ada_pin_three"

                    android:enabled="false"
                    android:gravity="center"
                    android:textOff="@null"
                    android:textOn="@null" />

                <ToggleButton
                    android:id="@+id/passCode4"
                    android:layout_width="@dimen/dimen_20_dp"
                    android:layout_height="@dimen/dimen_20_dp"
                    android:layout_marginLeft="@dimen/dimen_10_dp"
                    android:layout_marginRight="@dimen/dimen_10_dp"
                    android:layout_marginTop="@dimen/dimen_8_dp"
                    android:layout_marginBottom="@dimen/dimen_8_dp"
                    android:background="@drawable/edit_text_selector"
                    android:contentDescription="@string/mdl_ada_pin_four"
                    android:enabled="false"
                    android:gravity="center"
                    android:textOff="@null"
                    android:textOn="@null" />

                <ToggleButton
                    android:id="@+id/passCode5"
                    android:layout_width="@dimen/dimen_20_dp"
                    android:layout_height="@dimen/dimen_20_dp"
                    android:layout_marginLeft="@dimen/dimen_10_dp"
                    android:layout_marginRight="@dimen/dimen_10_dp"
                    android:layout_marginTop="@dimen/dimen_8_dp"
                    android:layout_marginBottom="@dimen/dimen_8_dp"
                    android:background="@drawable/edit_text_selector"
                    android:contentDescription="@string/mdl_ada_pin_five"
                    android:enabled="false"
                    android:gravity="center"
                    android:textOff="@null"
                    android:textOn="@null" />

                <ToggleButton
                    android:id="@+id/passCode6"
                    android:layout_width="@dimen/dimen_20_dp"
                    android:layout_height="@dimen/dimen_20_dp"
                    android:layout_marginLeft="@dimen/dimen_10_dp"
                    android:layout_marginRight="@dimen/dimen_10_dp"
                    android:layout_marginTop="@dimen/dimen_8_dp"
                    android:layout_marginBottom="@dimen/dimen_8_dp"
                    android:background="@drawable/edit_text_selector"
                    android:contentDescription="@string/mdl_ada_pin_six"
                    android:enabled="false"
                    android:gravity="center"
                    android:textOff="@null"
                    android:textOn="@null" />
            </LinearLayout>

            <EditText
                android:id="@+id/etPasscode"
                android:layout_width="230dp"
                android:layout_height="@dimen/dimen_24_dp"
                android:background="@null"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:inputType="none"
                android:maxLength="6"
                android:singleLine="true"
                android:visibility="gone"
                android:text=""
                android:textColor="@android:color/transparent"
                android:textColorHighlight="@android:color/transparent"
                android:windowSoftInputMode="adjustPan">
            </EditText>
        </FrameLayout>



        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="50dp"
            android:gravity="center_horizontal"
            android:text="@string/mdl_please_create_a_6_digit_pin"
            android:tag="@string/mdltag_please_create_a_6_digit_pin"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/dumy_field_passcode"
            android:layout_width="0.1dp"
            android:layout_height="0dp"
            android:inputType="numberPassword"
            android:maxLength="6" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:paddingLeft="@dimen/dimen_32_dp"
        android:paddingRight="@dimen/dimen_32_dp">

        <include layout="@layout/mdlive_layout_keypad" />
    </FrameLayout>
</LinearLayout>