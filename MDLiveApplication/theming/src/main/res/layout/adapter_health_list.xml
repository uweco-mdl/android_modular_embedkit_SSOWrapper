<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/adapter_health_list_left_imagview"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/adapter_health_list_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="@string/mdl_large_text"
        android:tag="@string/mdltag_large_text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black"
        android:layout_toRightOf="@+id/adapter_health_list_left_imagview"
        android:layout_marginLeft="30dp"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/adapter_health_list_sub_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mdl_small_text"
        android:tag="@string/mdltag_small_text"
        android:textColor="@color/black"
        android:layout_toRightOf="@+id/adapter_health_list_left_imagview"
        android:layout_below="@+id/adapter_health_list_text_view"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:textSize="15dp"/>

    <ImageView
        android:id="@+id/adapter_health_list_right_imageview"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/right_arrow" />

</RelativeLayout>