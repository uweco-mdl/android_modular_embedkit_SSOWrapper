<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/common_style_W_Match_H_Match_O_Vertical"
    android:background="@color/app_background">

    <TextView
        style="@style/common_style_W_Wrap_H_Wrap"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp"
        android:text="@string/mdl_credit_card_info"
        android:fontFamily="sans-serif-light"
        android:tag="@string/mdltag_credit_card_info"
        android:textColor="@color/darkblack"
        android:layout_marginBottom="@dimen/dimen_20_dp"
        android:textSize="18sp" />

    <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        style="@style/common_style_W_Match_H_Wrap"
        android:id="@+id/viewCreditCard"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="4dp">

        <RelativeLayout style="@style/common_style_W_Wrap_H_Wrap"
            >

            <TextView
                android:id="@+id/cardEndDate"
                style="@style/common_style_W_Wrap_H_Wrap"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="14dp"
                android:textColor="@color/darkgreyTextColor"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/cardAddress"
                style="@style/common_style_W_Wrap_H_Wrap"
                android:layout_below="@id/cardEndDate"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/imgCard"
                android:textColor="@color/EditText_HintColor"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/imgCard"
                android:layout_width="111dp"
                android:layout_height="77dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="59dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/master_card" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        style="@style/myProfileLayoutStyle"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="4dp">

        <TextView
            android:id="@+id/addCreditCard"
            style="@style/myProfileButtonStyle"
            android:text="@string/mdl_replace_card"
            android:tag="@string/mdltag_replace_card" />
    </android.support.v7.widget.CardView>
</LinearLayout>