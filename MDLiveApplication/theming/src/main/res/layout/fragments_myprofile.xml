<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/common_style_W_Match_M_Match"
    android:orientation="vertical">
<ScrollView
    style="@style/common_style_W_Match_M_Match_view_port"
    >

    <LinearLayout style="@style/common_style_W_Match_H_Match_O_Vertical">

        <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
            style="@style/myProfileLayoutStyle"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="4dp">

            <RelativeLayout style="@style/common_style_W_Match_H_Wrap_O_Vertical">

                <FrameLayout
                    android:id="@+id/imgProfilePicLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="19dp">

                <com.mdlive.unifiedmiddleware.commonclasses.customUi.CircularNetworkImageView
                    android:id="@+id/imgProfilePic"
                    android:layout_width="82dp"
                    android:layout_height="82dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:contentDescription="@string/mdl_ada_profile_button"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profilepic" />

                    <TextView
                        android:layout_width="82dp"
                        android:layout_height="wrap_content"
                        android:text="@string/mdl_edit_upper"
                        android:tag="@string/mdltag_edit"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:gravity="center_horizontal"
                        android:textColor="@color/white"
                        android:layout_gravity="bottom|center_horizontal"
                        android:background="@color/transparent"/>

                </FrameLayout>

                <TextView
                    android:id="@+id/txtProfileName"
                    style="@style/myProfileTextStyle"
                    android:layout_marginTop="14dp"
                    android:layout_toRightOf="@id/imgProfilePicLayout"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txtUserName"
                    style="@style/myProfileTextStyle"
                    android:layout_below="@id/txtProfileName"
                    android:layout_marginTop="0dp"
                    android:layout_toRightOf="@id/imgProfilePicLayout"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtUserDOB"
                    style="@style/myProfileTextStyle"
                    android:layout_below="@id/txtUserName"
                    android:layout_marginTop="0dp"
                    android:layout_toRightOf="@id/imgProfilePicLayout"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtGender"
                    style="@style/myProfileTextStyle"
                    android:layout_below="@id/txtUserDOB"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="14dp"
                    android:layout_toRightOf="@id/imgProfilePicLayout"
                    android:textSize="14sp" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/emailView"
            style="@style/myProfileLayoutStyle"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="4dp">

            <LinearLayout style="@style/common_style_W_Match_H_Wrap_O_Vertical"
                android:paddingTop="@dimen/dimen_4_dp"
                android:paddingBottom="@dimen/dimen_4_dp">

                <TextView
                    style="@style/myProfileTextStyle"
                    android:text="@string/mdl_email"
                    android:tag="@string/mdltag_email"/>

                <TextView
                    android:id="@+id/email"
                    style="@style/myProfileValueStyle"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"

            style="@style/myProfileLayoutStyle"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="4dp">

            <LinearLayout style="@style/common_style_W_Match_H_Wrap_O_Vertical"
                android:paddingTop="@dimen/dimen_4_dp"
                android:paddingBottom="@dimen/dimen_4_dp"
                android:id="@+id/addressView">

                <TextView
                    style="@style/myProfileTextStyle"
                    android:text="@string/mdl_address"
                    android:tag="@string/mdltag_address"/>

                <TextView
                    android:id="@+id/address"
                    style="@style/myProfileValueStyle" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"

            style="@style/myProfileLayoutStyle"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="4dp">

            <LinearLayout style="@style/common_style_W_Match_H_Wrap_O_Vertical"
                android:paddingTop="@dimen/dimen_4_dp"
                android:paddingBottom="@dimen/dimen_4_dp"
                android:id="@+id/phoneNumberView">

                <TextView
                    style="@style/myProfileTextStyle"
                    android:text="@string/mdl_phone_number_caps"
                    android:tag="@string/mdltag_phone_number"/>

                <TextView
                    android:id="@+id/phoneNumber"
                    style="@style/myProfileValueStyle" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"

            style="@style/myProfileLayoutStyle"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="4dp">

            <LinearLayout style="@style/common_style_W_Match_H_Wrap_O_Vertical"
                android:paddingTop="@dimen/dimen_4_dp"
                android:paddingBottom="@dimen/dimen_4_dp"
                android:id="@+id/emergencyNumberView">

                <TextView
                    style="@style/myProfileTextStyle"
                    android:text="@string/mdl_emergency_contact_number_caps"
                    android:tag="@string/mdltag_emergency_contact_number_caps"/>

                <TextView
                    android:id="@+id/emergencyContactNumber"
                    style="@style/myProfileValueStyle" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/timeZoneView"
            style="@style/myProfileLayoutStyle"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="4dp">

            <LinearLayout style="@style/common_style_W_Match_H_Wrap_O_Vertical"
                android:paddingTop="@dimen/dimen_4_dp"
                android:paddingBottom="@dimen/dimen_4_dp">

                <TextView
                    style="@style/myProfileTextStyle"
                    android:text="@string/mdl_timezone"
                    android:tag="@string/mdltag_timezone"/>

                <TextView
                    android:id="@+id/timeZone"
                    style="@style/myProfileValueStyle"
                    android:layout_width="match_parent"
                    android:layout_marginRight="12dp"
                    android:drawableRight="@drawable/dropdown_icon"
                    android:gravity="center_vertical" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/changeLangView"
            style="@style/myProfileLayoutStyle"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="4dp">

            <LinearLayout style="@style/common_style_W_Match_H_Wrap_O_Vertical"
                android:paddingTop="@dimen/dimen_4_dp"
                android:paddingBottom="@dimen/dimen_4_dp">

                <TextView
                    style="@style/myProfileTextStyle"
                    android:textAllCaps="true"
                    android:text="@string/mdl_preferred_language"
                    android:tag="@string/mdltag_preferred_language"/>

                <TextView
                    android:id="@+id/changeLangTv"
                    style="@style/myProfileValueStyle"
                    android:layout_width="match_parent"
                    android:layout_marginRight="12dp"
                    android:drawableRight="@drawable/dropdown_icon"
                    android:gravity="center_vertical" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/preferredSignInView"
            style="@style/myProfileLayoutStyle"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="4dp">

            <LinearLayout style="@style/common_style_W_Match_H_Wrap_O_Vertical"
                android:paddingTop="@dimen/dimen_4_dp"
                android:paddingBottom="@dimen/dimen_4_dp">

                <TextView
                    style="@style/myProfileTextStyle"
                    android:text="@string/mdl_preferred_signin"
                    android:tag="@string/mdltag_preferred_signin"/>

                <TextView
                    android:id="@+id/preferredSignIn"
                    style="@style/myProfileValueStyle"
                    android:layout_width="match_parent"
                    android:layout_marginRight="12dp"
                    android:drawableRight="@drawable/dropdown_icon"
                    android:gravity="center_vertical" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/changePassword"
            style="@style/myProfileLayoutStyle"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="4dp">

            <TextView
                style="@style/myProfileButtonStyle"
                android:text="@string/mdl_change_password"
                android:tag="@string/mdltag_change_password"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/changePin"
            style="@style/myProfileLayoutStyle"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="4dp">

            <TextView
                style="@style/myProfileButtonStyle"
                android:text="@string/mdl_change_pin"
                android:tag="@string/mdltag_change_pin"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/changeSecurityQuestion"
            style="@style/myProfileLayoutStyle"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="4dp">

            <TextView
                style="@style/myProfileButtonStyle"
                android:text="@string/mdl_change_security_questions"
                android:tag="@string/mdltag_change_security_questions"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
            style="@style/myProfileLayoutStyle"
            app:cardBackgroundColor="@color/white"
            android:id="@+id/SyncHealthSwitchContainer"
            app:cardCornerRadius="4dp">

            <LinearLayout style="@style/common_style_W_Match_H_Wrap_O_Vertical"
                android:paddingTop="@dimen/dimen_16_dp"
                android:paddingBottom="@dimen/dimen_16_dp">

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/SyncHealthSwitch"
                    android:layout_width="match_parent"
                    android:layout_height="19dp"
                    android:checked="false"
                    android:textSize="16sp"
                    android:layout_marginRight="12dp"
                    android:gravity="center_vertical"
                    android:text="@string/mdl_sync_with_health"
                    app:theme="@style/Switch"
                    android:paddingLeft="9dp"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>


</ScrollView>
</LinearLayout>